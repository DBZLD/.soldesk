package kioskV9;

public class Display {
	public static void TitleDisplay() {
		System.out.println("============================================");
		System.out.println("==============       카페       ==============");
		System.out.println("============================================");
	}

	public static void TotalMenuDisplay() {
		System.out.println(String.format("주문 내역\n에스프레소 : %d개\n아메리카노 : %d개\n케이크 : %d개\n쿠키 : %d개\n", Product.nCountEspresso,
				Product.nCountAmericano, Product.nCountCake, Product.nCountCookie));
		System.out.println(String.format("총 주문 금액 : %d원"));
	}
}
