package rpc1;
import java.util.Scanner;

public class rpc1 {
	public static void main(String[] args) {
		System.out.println("가위, 바위, 보 중에 하나를 입력해주세요");
		
		Scanner sc = new Scanner(System.in);
		String stPlayerRpc = sc.next();
		String stComRpc;
		int nPlayerRpc = 0;
		int nComRpc = (int)(Math.random() * 3);
		
		if(nComRpc == 0) {
			stComRpc = "가위";
		}
		else if(nComRpc == 1){
			stComRpc = "바위";
		}
		else if(nComRpc == 2){
			stComRpc = "보";
		}
		else{
			System.out.println("올바른 값을 입력해주세요");
			return;
		}
		
		if(stPlayerRpc.equals("가위")){
			nPlayerRpc = 0;
		}
		else if(stPlayerRpc.equals("바위")){
			nPlayerRpc = 1;
		}
		else if(stPlayerRpc.equals("보")){
			nPlayerRpc = 2;
		}
		switch(nPlayerRpc-nComRpc) {
		case 0:
			System.out.println("비겼습니다.");
			break;
		case 1:
		case -2:
			System.out.println("이겼습니다.");
			break;
		case -1:
		case 2:
			System.out.println("졌습니다.");
		}
	}
}
