package kioskV2;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		System.out.println("============================================");
		System.out.println("==============       카페       ==============");
		System.out.println("============================================");
		Scanner sc;
		String userChoice;
		loopMain:
		while(true) {
			System.out.print("1.음료\n2.디저트\n3.나가기");
			sc = new Scanner(System.in);
			userChoice = sc.next();
			switch(userChoice) {
			case "1":
				loopDrink:
					while(true) {
						System.out.println("음료 선택");						
					}
				break;
			case "2":
				loopFood:
					while(true) {
						System.out.println("2번명령");
						
					}
				break;
			case "3":
				break loopMain;
			}
		}
		System.out.println("프로그램 종료");
	}
}
